{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    
    "parser": "babel-eslint",
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-param-reassign": 0,
        "no-class-assign": 0,
        "no-console": 0,
        "indent": [0, "tab"],
        "no-tabs": 0,
        "max-len": 0,
        "no-nested-ternary": 0,
        "jsx-a11y/anchor-has-content": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "spaced-comment": [
            "error", "always", { 
                "line": { 
                    "markers": ["--"], 
                    "exceptions": ["--"] 
                } 
            }
        ],
        "import/no-extraneous-dependencies": [0],
        "import/extensions": 0,
        "arrow-parens": 0,
        "no-underscore-dangle": ["error", { "allow": ["_id"]}],
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": [
            1, 
            { "extensions": [".js", ".jsx"] }
        ],
        "react/jsx-indent": [1, "tab"],
        "react/jsx-indent-props": [1, "tab"],
        "react/prefer-stateless-function": 0
    }
}